<div class="container">
  <div class="row">
    <div class="span12">
<h1>Contacts</h1>
<% if @contacts.count == 0 %>
	<p>Uh oh! You don't have any contacts. Why don't you <%= link_to 'Create A Contact', new_contact_path %></p>
<% else %>
<ul class="thumbnails">
<% @contacts.each do |contact| %>
  <li class="span3">
    <div class="thumbnail">
      <%= gravatar_image_tag("#{contact.email}", :alt => "#{contact.fname} #{contact.lname}", :align => 'left', :style => "padding:0px 10px 10px 0px;") %>
      <h4><%= contact.fname %> <%= contact.lname%></h4>
	  <h5><%= contact.bname %></h5>
      <p><%= contact.email %></p>
	  <p><%= link_to "Edit", edit_contact_path(contact), :class => "btn" %></p>
    </div>
  </li>
<% end %>
</ul>

</div>

<div class="span2">
<%= link_to 'New Contact', new_contact_path, :class => "btn btn-primary" %>
</div>
<% end %>
</div>
</div>
