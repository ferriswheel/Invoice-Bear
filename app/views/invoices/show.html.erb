<div class="container">
  <div class="row">
    <div class="span12">
<p id="notice"><%= notice %></p>
<h1>Invoice (<%= number_to_currency(@invoice.total) %>)</h1>

<div id="invoice_options" align="right">
<a href="/invoices/send_invoice_notification/<%= @invoice.id %>" class="btn btn-info">Send to Client</a>
<%= link_to "Edit Invoice", edit_invoice_path(@invoice), :class => "btn" %>
</div>

<span class="ribbon"><%= @invoice.status %>
	</span>

<div class="field">
	<b>Invoice Summary:</b>
	<%= @invoice.title %>
</div>
<div class="field">
	<b>Invoice Date:</b>
	<%= @invoice.created_at.to_s(:simple) %>
</div>

<p>
	<table class="table table-condensed">
	<tr class="header">
	<td>Description</td>
	<td>Unit Cost</td>
	<td>Quantity</td>
	<td>Discount</td>
	<td>Total</td>
	</tr>

	<% @invoice.items.each do |item| %>
	<tr>
	<td class="invoice_description"><%= item.description %></td>
	<td class="invoice_unit_cost"><%= item.unit_cost %></td>
	<td class="invoice_quantity"><%= item.quantity %></td>
	<td class="invoice_discount"><%= number_to_percentage(item.discount) %></td>
	<td class="invoice_item_total"><%= item.total_price %></td>
	</tr>
	<% end %>
	</table>
</p>

</div>
</div>
</div>